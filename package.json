
{
  "name": "my-stacks-contracts-tests",
  "version": "1.0.0",
  "description": "Run unit tests on this project.",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:report": "vitest run -- --coverage --costs",
    "test:watch": "chokidar \"tests/**/*.ts\" \"contracts/**/*.clar\" -c \"npm run test:report\"",
    "chainhooks:register": "tsx scripts/chainhooks.ts register",
    "chainhooks:list": "tsx scripts/chainhooks.ts list",
    "chainhooks:delete": "tsx scripts/chainhooks.ts delete",
    "chainhooks:server": "tsx scripts/webhook-server.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hirosystems/chainhooks-client": "^1.0.0",
    "@stacks/clarinet-sdk": "^3.9.0",
    "@stacks/transactions": "^7.2.0",
    "@types/node": "^24.4.0",
    "chokidar-cli": "^3.0.0",
    "dotenv": "^16.4.5",
    "vitest": "^4.0.7",
    "vitest-environment-clarinet": "^3.0.0"
  },
  "devDependencies": {
    "tsx": "^4.7.0"
  }
}
